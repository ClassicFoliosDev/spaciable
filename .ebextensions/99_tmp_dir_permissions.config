files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/99_make_tmp_writeable.sh" :
    mode: "000777"
    content: |
      #!/bin/bash
      mkdir -p /var/app/current/tmp/uploads/
      chmod 777 /var/app/current/tmp/uploads/

      mkdir -p /var/app/current/public/uploads/tmp/
      chmod 777 /var/app/current/public/uploads/tmp/
