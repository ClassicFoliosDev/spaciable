<div class="tile-image">
  <%= image_tag tile.image %>
</div>
<div class="img-tile-details">
  <div class="tile-text">
    <h2 class="tile-title branded-text"><%= tile.title %></h2>
    <p class="tile-description branded-text"><%= tile.description %></p>
  </div>
  <div class="tile-button">
    <% if tile.document? %>
      <%= link_to tile.button, tile.document_location(documents), target: '_blank', class: "branded-btn" %>
    <% else %>
      <%= link_to tile.button, tile.link, target: '_blank', class: "branded-btn" %> <!-- we need to create a new page and iframe this link -->
    <% end %>
  </div>
</div>
