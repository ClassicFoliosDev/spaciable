<div class="snag-comment branded-text branded-border">
  <span class="strong"><%= snag_comment.commenter_name %></span>
  <span class="date"><%= snag_comment.created_at.strftime("%d %B %Y, %H:%M") %></span><br/>
  <span class="content"><%= snag_comment.content %></span><br/>
  <% if snag_comment.image? %>
    <span class="image"><%= image_tag snag_comment.image %></span>
  <% end %>
</div>
