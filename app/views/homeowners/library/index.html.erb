
<%= render "components/homeowner/library_hero", active_category: @category, categories: @categories %>

<%= render "components/homeowner/sub_header", active_tab: "library" %>

<div class="branded-body library">
  <div class="main-container documents branded-background branded-text">
    <div class="row">
      <% @documents.each do |document| %>
        <div class="sixth document">
          <div class="document-image-container">
            <%= link_to document.file.url, target: "_blank" do %>
              <%= fa_icon "file-pdf-o" %>
              <h5><%= document.title %></h5>
          <% end %>
          </div>
        </div>
      <% end %>

      <% @appliances.each do |appliance| %>
        <% if appliance.manual? %>
          <div class="sixth document">
            <div class="document-image-container">
              <%= link_to appliance.manual.url, target: "_blank" do %>
                <%= fa_icon "file-pdf-o" %>
                <h5><%= appliance.full_name %></h5>
                <span><%= appliance.appliance_category %></span>
                <p><%= t(".manual") %></p>
              <% end %>
            </div>
          </div>
        <% end %>
        <% if appliance.guide? %>
          <div class="sixth document">
            <div class="document-image-container">
              <%= link_to appliance.guide.url, target: "_blank" do %>
                <%= fa_icon "file-pdf-o" %>
                <h5><%= appliance.full_name %></h5>
                <span><%= appliance.appliance_category %></span>
                <p><%= t(".guide") %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="disclaimer branded-content">
  <span><%= t(".disclaimer") %></span>
</div>
