<% content_for :hero_text_primary do %>
  <%= t('.title') %>
<% end %>
<% content_for :hero_text_secondary do %>
  <ul class="hero-links categories">
    <% @categories.each do |category| %>
      <li>
        <%= link_to t_enum(HowTo, :category, category),
          homeowner_how_tos_path(category),
          class: ("active" if @category == category) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render "components/homeowner/hero" %>

<div class="branded-body">
  <div class="main-container">
    <% if @tag %>
      <p class="tag-line"><%= t(".tagged", tag: @tag) %><strong><%= @tag.name %></strong></p>
    <% end %>
    <div class="how-tos">
      <%= render "homeowners/components/how_to_summary", collection: @how_tos %>
    </div>
  </div>
</div>
