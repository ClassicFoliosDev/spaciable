<% content_for :sub_category_navigation do %>
  <% @categories.each do |cat| %>
    <% if @contacts_for.key? cat %>
      <div class="navbar-item">
        <%= link_to homeowner_contacts_path(cat),
            class: ("active" if @category == cat)  do %>
          <li class="navbar-item-secondary">
            <%= t_enum(Contact, :category, cat) %>
          </li>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>

<%= render "components/homeowner/hero" %>

<div class="contacts-nav">
  <%= render "components/homeowner/sub_categories" %>
</div>

<div class="branded-body outer-container">
  <div class="page-title">
    <h2 class="branded-text"><%= t(".title") %></h2>
  </div>
  <div class="check-faqs branded-text">
    <% default_faq_type = @plot.development.faq_types.first %>
    <% default_faq_category = default_faq_type.categories.first %>
    <span><%= t(".check_faqs", link: link_to(Faq.model_name.human.pluralize, homeowner_faqs_path(default_faq_type, default_faq_category))).html_safe %></span>
  </div>
  <div class="full-contacts">
      <% @contacts.each_with_index do | contact, index | %>
        <%= render "homeowners/components/contact", contact: contact %>
      <% end %>
    </div>
  </div>
</div>
