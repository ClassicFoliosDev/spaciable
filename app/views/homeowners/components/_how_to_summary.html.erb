<% collection.each do |how_to| %>
  <div class="card article how-to-dash branded-border" style="background-image: url(<%= image_path(how_to.picture.url) if how_to.picture? %>)">
    <div class="overlay <%= 'blue-overlay' unless how_to.picture? %>">
      <div class="card-content how-to-summary">
        <div id="how_to-<%= how_to.id %>">
          <p class="larger"><%= how_to.title %></p>
        </div>
        <span class="how-to-logo">How To.</span>
        <%= link_to t(".article"), how_to_path(how_to), class: "branded-btn-inverted view-article" %>
      </div>
    </div>
  </div>
<% end %>
