<div class="card-content">
  <div class="my-home-address">
    <% if plot.prefix.present? %>
      <%= plot.prefix %>
    <% end %>
    <%= plot.postal_number %> <%= plot.building_name %>
    <% if plot.building_name.present? && plot.road_name.present? %>
      <br/>
    <% end %>
    <% if plot.road_name.present? %>
      <%= plot.road_name %><br/>
    <% end %>
    <% if plot.locality.present? %>
      <%= plot.locality %><br/>
    <% end %>
    <% if plot.city.present? %>
      <%= plot.city %><br/>
    <% end %>
    <% if plot.county.present? %>
      <%= plot.county %><br/>
    <% end %>
    <% if plot.postcode.present? %>
      <%= plot.postcode %><br/>
    <% end %>
  </div>
  <%= link_to t(".view_more", construction: plot.my_home_name), homeowner_my_home_path, class: "btn branded-btn-inverted view-my-home-btn" %>
  <%= link_to t(".spotlights"), "#dashtile0", class: "btn branded-btn-inverted spotlights-btn" %>
</div>
