<div class="contact branded-content branded-border branded-text">
  <div class="avatar">
    <% if contact.picture? %>
      <%= image_tag contact.picture.url :thumbnail if contact.picture? %>
    <% else %>
      <div class="initials-avatar">
        <% if contact.first_name? || contact.last_name? %>
          <span class="initials"><%= contact&.first_name[0]&.upcase %><%= contact&.last_name[0]&.upcase %></span>
        <% else %>
        <span class="initials"><%= contact&.position[0]&.upcase %></span>
        <% end %>
      </div>
    <% end %>

    <p title="<%= contact.to_s %>"><%= contact.to_s %></p>
    <p class="position branded-text" title="<%= contact.position %>"><%= contact.position %></p>
  </div>

  <div class="details branded-text">
    <br/>
    <% if contact.phone? %>
        <p class="contact-detail">
          <%= link_to t(".tel", number: contact.phone), class: "branded-text", title: contact.phone do %>
            <%= fa_icon "phone" %> <%= contact.phone %>
          <% end %>
        </p>
      <% end %>

      <% if contact.mobile? %>
        <p class="contact-detail">
          <%= link_to t(".tel", number: contact.mobile), class: "branded-text", title: contact.mobile do %>
            <%= fa_icon "mobile" %> <%= contact.mobile %>
          <% end %>
        </p>
      <% end %>

      <% if contact.email? %>
        <p class="contact-detail">
          <%= mail_to contact.email, class: 'branded-text' do %>
            <%= fa_icon "envelope" %>
            <%= contact.email %>
          <% end %>
        </p>
      <% end %>
  </div>
</div>
