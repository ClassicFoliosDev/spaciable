<% content_for :hero_text_primary do %>
    <%= render 'address/address', address: @plot %>
<% end %>

<%= render "components/homeowner/sub_header", active_tab: "appliances" %>

<div class="branded-body">
  <div class="appliances">
    <% @appliances.each do | appliance | %>
      <div class="appliance branded-content branded-border branded-text">
        <div class="images">
          <h2><%= appliance.appliance_category %></h2>
          <% if appliance.primary_image? %>
            <%= image_tag(appliance.primary_image.url) %>
          <% else %>
            <%= fa_icon "image", class: " dummy-image fa-5x" %>
            <span><%= t("no_image") %></span>
          <% end %>
          <% if appliance.secondary_image? %>
            <%= image_tag(appliance.secondary_image.url, class: "secondary-image") %>
          <% end %>

          <% if appliance.manufacturer_link.present? %>
            <%= link_to t(".register"), appliance.manufacturer_link, class: "branded-btn", target: :_blank %>
          <% end %>
        </div>

        <div class="details">
          <div class="detail">
            <%= label_tag(:manufacturer) %>
            <%= appliance&.manufacturer %>

            <%= label_tag(t("appliances.form.model_num")) %>
            <%= appliance.model_num %>

            <%= label_tag t("appliances.show.documents") %>
            <% if appliance.manual? %>
              <%= link_to appliance.manual.url, class: "btn", target: "_blank" do %>
                <%= icon "cloud-download" %>
              <% end %>
            <% end %>

            <%= label_tag(t("appliances.form.warranty_length")) %>
            <%= t("activerecord.attributes.appliance.warranty_length.#{appliance.warranty_length}") if appliance.warranty_length? %>

            <%= label_tag(t("appliances.form.e_rating")) %>
            <% if appliance.e_rating %>
              <%= image_tag "Hoozzi Energy Rating #{appliance.e_rating.upcase}.svg", class: "energy-rating" %>
            <% end %>
          </div>

          <div class="detail">
            <%= label_tag(:description) %>
            <p><%= appliance.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
