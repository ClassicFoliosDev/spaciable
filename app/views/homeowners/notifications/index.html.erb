<% content_for :sub_category_navigation do %>
  <div class="navbar-item">
    <%= link_to homeowners_notifications_path, class: "active" do %>
    <li class="navbar-item-secondary">
      <%= t(".title") %>
    </li>
    <% end %>
  </div>
<% end %>

<%= render "components/homeowner/hero" %>

<div class="intro-video-nav">
  <%= render "components/homeowner/sub_categories" %>
</div>

<div class="branded-body">
  <div class="main-container">
    <div class="notification-container">
      <div class="notification-list" data-note_id=<%=@note_id%>>
        <%= render "homeowners/components/notification_summary", collection: @notifications %>
      </div>

      <% if @notifications.any? %>
        <%= render "homeowners/components/notification" %>
      <% else %>
        <%= t(".none") %>
      <% end %>
    </div>
  </div>
</div>
