<% breadcrumb :division, @division %>

<div class="division">
  <%= render @division %>

  <%= render 'components/tabs', tabs: division_tabs(@division, @active_tab), parent: @division %>
  <%= render_collection @collection, parent: @division %>

  <div class="form-actions-footer-container">
    <div class="form-actions-footer">
      <%= link_to t(".back"), [@division.developer, active_tab: :divisions], class: "btn" %>
    </div>
  </div>
</div>
