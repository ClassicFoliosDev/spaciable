<% breadcrumb :plot_residency, @plot_residency %>

<div class="section-header">
  <h3 class="section-title">
    <i class="fa fa-user"></i>
    <%= t(".title", plot: @plot) %><br>
  </h3>
  <div class="section-data">
    <%= edit_btn [:edit, @plot_residency], element: @plot_residency %>
  </div>
</div>

<div class="row">
  <div class="row-item third">
    <%= label_tag(PlotResidency.human_attribute_name(:full_name)) %>
    <span><%= @plot_residency %></span>
    <%= label_tag(PlotResidency.human_attribute_name(:email)) %>
    <span><%= @plot_residency.email %></span>
  </div>
  <div class="row-item third">
    <%= label_tag(PlotResidency.human_attribute_name(:phone_number)) %>
    <span><%= @plot_residency.phone_number %></span>
  </div>
  <div class="row-item third">
    <%= label_tag(PlotResidency.human_attribute_name(:completion_date)) %>
    <span><%= l(@plot_residency.completion_date) if @plot_residency.completion_date? %></span>
  </div>
</div>

<div class="form-actions-footer-container">
  <div class="form-actions-footer">
    <%= link_to t(".back"), [@plot_residency.plot, :plot_residencies], class: "btn" %>
  </div>
</div>
