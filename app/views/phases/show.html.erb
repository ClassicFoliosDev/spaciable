<% breadcrumb :phase, @phase %>

<div class="section-header">
  <h3 class="section-title">
    <%= @phase.name %><br>
  </h3>

  <div class="section-data">
    <%= render 'address/address', address: @phase.address %>
    <span class="right">
      <span class="strong"><%= t(".phase", number: @phase.number) %></span>
      <%= edit_btn [:edit, @phase.development, @phase] %>
    </span>
  </div>
</div>

<%= render_collection @collection, parent: @phase %>

<%= link_to t(".back"), development_phases_path, class: "btn" %>
