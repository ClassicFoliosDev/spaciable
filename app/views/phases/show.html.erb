<% breadcrumb :phase, @phase %>

<div class="phase">
  <%= render @phase, resident_count: @resident_count, subscribed_resident_count: @subscribed_resident_count %>
  <%= render 'components/tabs', tabs: phase_tabs(@phase, @active_tab), parent: @parent %>

  <% if @active_tab == "production" %>
    <%= render_collection @collection, path: "production/collection", parent: @phase %>
  <% else %>
    <%= render_collection @collection, parent: @phase %>
  <% end %>

  <div class="form-actions-footer-container">
    <div class="form-actions-footer">
      <%= link_to t(".back"), development_phases_path, class: "btn" %>
    </div>
  </div>
</div>
