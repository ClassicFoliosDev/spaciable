<%= simple_form_for([phase.development, phase]) do |f| %>
  <% if phase.errors.any? %>
    <div class="row">
      <div class="row-item">
        <div class="submission-errors">
          <ul>
            <% phase.errors.full_messages.each do |message| %>
              <li>
                <%= fa_icon "exclamation-circle" %>
                <%= message %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="row-item third">
      <fieldset>
        <%= f.input :name %>
        <%= f.input :number, as: :integer %>
      </fieldset>
    </div>
    <div class="row-item third">
      <fieldset>
        <div class="input string optional">
          <label class="string optional">Phase Address</label>
          <%= f.input :postal_name, label: false, placeholder: "Postal Number / Name" %>
          <%= f.input :building_name, label: false, placeholder: "Building Name" %>
          <%= f.input :road_name, label: false, placeholder: "Road Name" %>
        </div>
        <%= f.input :city %>
        <%= f.input :county %>
        <%= f.input :postcode %>
      </fieldset>
    </div>
  </div>

  <div class="form-actions-footer-container">
    <div class="form-actions-footer">
      <%= link_to t("views.back"), development_phases_path, class: "btn" %>
      <%= f.submit t(".submit"), class: "btn-form-submit btn-primary" %>
    </div>
  </div>
<% end %>
