<title><%= t(".title") %><%= (" - " + yield(:title) unless yield(:title).blank?).to_s %></title>
<% unless yield(:description).blank? %>
  <meta name="description" content="<%= yield(:description) %>">
<% end %>

<%= render "admin/chart/config" %>

<% if Rails.env.test? %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<%= csrf_meta_tags %>
<meta name="viewport" content="width=device-width, initial-scale=1">

<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
<link rel="apple-touch-icon" href=<%= image_path("Spaciable_icon.png") %> content=<%= t(".title") %> />
<%= favicon_link_tag "Spaciable_icon.png" %>

