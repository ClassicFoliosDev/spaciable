<%= simple_form_for([unit_type.development, unit_type]) do |f| %>
  <% if unit_type.errors.any? %>
    <div class="submission-errors">
      <ul>
        <% unit_type.errors.full_messages.each do |message| %>
            <li>
              <%= fa_icon "exclamation-circle" %>
              <%= message %>
            </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="row-item third">
      <fieldset>
        <%= f.label t(".picture") %>
        <%= image_tag(unit_type.picture.thumbnail.url) if unit_type.picture? %>
        <br>
        <%= label_tag('uploader', t(".upload"), class: "btn") %>
        <%= f.file_field :picture, id: "uploader", class: "hidden" %>
        <%= f.input :name %>
      </fieldset>
    </div>
    <div class="row-item third">
      <fieldset>
        <%= f.input :build_type, as: :select, collection: build_types_collection, include_blank: false %>
      </fieldset>
    </div>
    <div class="row-item third">
      <fieldset>
        <%= f.label :external_link %>
        <%= f.text_area :external_link, placeholder: t(".matterport_example") %>
        <p><%= t("unit_types.form.matterport_tip") %></p>
      </fieldset>
    </div>
  </div>

  <div class="form-actions-footer-container">
    <div class="form-actions-footer">
      <%= link_to t(".back"), [unit_type.development.parent, unit_type.development, active_tab: :unit_types], class: "btn" %>
      <%= f.submit t(".submit"), class: "btn-form-submit btn-primary" %>
    </div>
  </div>
<% end %>
