<%= simple_form_for([unit_type.development, unit_type]) do |f| %>
  <% if unit_type.errors.any? %>
    <div class="submission-errors">
      <ul>
        <% unit_type.errors.full_messages.each do |message| %>
            <li>
              <%= fa_icon "exclamation-circle" %>
              <%= message %>
            </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="row-item third">
      <fieldset>
        <div class="image-container">
          <%= f.input :picture, as: :image_preview, label: t(".picture"), input_html: { preview_version: :thumbnail } %>
        </div>
        <p> <%= t(".picture_tip") %> </p>
        <%= f.input :name, label: t(".name") %>
        <% if current_user.cf_admin? %>
          <%= f.label :cas_restricted, t(".restricted") %>
          <%= f.check_box :restricted %>
        <% end %>
      </fieldset>
    </div>
    <div class="row-item two-thirds">
      <fieldset>
        <%= f.label :external_link, t(".walkthrough") %>
        <%= f.input :external_link, placeholder: t(".matterport_example"), label: false %>
        <div class="explanation">
          <p><%= t("unit_types.form.tip_1") %></p>
          <p><%= t("unit_types.form.tip_2").html_safe %></p>
          <p><%= t("unit_types.form.tip_3").html_safe %></p>
        </div>
      </fieldset>
    </div>
  </div>

  <div class="form-actions-footer-container">
    <div class="form-actions-footer">
      <%= link_to t(".back"), [unit_type.development.parent, unit_type.development, active_tab: :unit_types], class: "btn" %>
      <%= f.submit t(".submit"), class: "btn-form-submit btn-primary" %>
    </div>
  </div>
<% end %>
