<div class="section-header">
  <div class="section-title">
    <h3><%= appliance_category.name %></h3>
  </div>

  <div class="section-data">
    <span class="right">
      <%= edit_btn edit_appliance_category_path, element: appliance_category %>
    </span>
  </div>
</div>

<div class="row appliance_category">
  <div class="row-item half">
    <label><%= t(".manufacturers") %></label>
    <% ApplianceManufacturer.all.each do | manufacturer| %>
      <span><%= manufacturer %></span><br>
    <% end %>
  </div>
</div>
