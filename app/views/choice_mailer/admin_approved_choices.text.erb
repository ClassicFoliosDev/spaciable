<%= t(".new_message") %>

<%= t(".approved") %>

Plot: <%= @plot.number %>

<% if @plot.phase.present? %>
Phase: <%= @plot.phase_name %>
<% end %>

Development: <%= @plot.development_name %>
<% if @plot.division.present? %>

Division: <%= @plot.division_name %>
<% end %>

Developer: <%= @plot.company_name %>


<%= t(".choices") %>

<% @plot.rooms.each do |room| %>

<%= room.name %>
<% RoomChoice.plot_choices(room, @plot)&.each do | choice | %>
<% if choice.choiceable.is_a? Appliance %>
<% category = choice.appliance_category %>
<% elsif choice.choiceable.is_a? Finish %>
<% category = choice.finish_category %>
<% end %>
<%= category %>: <%= choice.short_name %>
<% end %>
<% end %>

