<div class="snag-comment">
  <span class="commenter"><%= snag_comment.commenter_name %></span>
  <span class="comment-date timeago"><%= timeago_tag snag_comment.created_at %></span><br/>
  <span class="content"><%= snag_comment.content %></span><br/>
  <% if snag_comment.image? %>
  <span class="comment-image"><%= link_to image_tag(snag_comment.image), snag_comment.image.url %></span>
  <% end %>
</div>
