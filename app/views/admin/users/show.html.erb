<% breadcrumb :admin_user, @user %>
<% Invitation.resident_invitation_summary %>

<div class="section-header">
  <div class="section-title">
    <div><%= @user %></div><br/>
  </div>
  <div class="section-data">
    <%= edit_btn [:edit, :admin, @user], element: @user %>
  </div>
</div>

<div class="row contact">
  <div class="row-item third">
     <div class="user-picture">
        <%= image_tag @user.picture.url :thumbnail if @user.picture? %>
      </div>
      <div class="email">
        <%= label_tag(:email) %>
        <span><%= @user.email %></span>
      </div>
      <% if @user.job_title? %>
        <div class="job-title">
          <%= label_tag :job_title, t(".job_title") %>
          <span><%= @user.job_title %></span>
        </div>
      <% end %>
    <div class="role">
      <%= label_tag :role %>
      <% if @user.cf_admin? %>
        <span><%= t(@user.role) %></span>
      <% else %>
        <span><%= t(".role_at", role: t(@user.role), permission_level_name: @user.permission_level) %></span>
      <% end %>
    </div>
  </div>
</div>

<div class="form-actions-footer-container">
  <div class="form-actions-footer">
    <%= link_to t(".back"), admin_users_path, class: "btn" %>
  </div>
</div>
