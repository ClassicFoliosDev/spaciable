<% breadcrumb :admin_users %>

<div class="section-header">
  <h3 class="section-title">
    <i class="fa fa-person"></i>
    <%= t(".title") %>
  </h3>
</div>

<div class="section-actions">
  <%= link_to new_admin_user_path, class: "btn btn-primary" do %>
    <i class="fa fa-plus"></i>
    <span class="btn-label"><%= t(".add") %></span>
  <% end %>
</div>

<table class="record-list">
  <thead>
    <tr>
      <th><%= sortable(@users, :email, t(".user")) %></th>
      <th><%= sortable(@users, :role) %></th>
      <th><%= t(".headings.permission_level") %></th>
      <th><%= sortable(@users, :invitation_accepted_at) %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr data-user="<%= user.id %>">
      <td><%= link_to user, admin_user_path(user) %></td>
      <td><%= t(user.role) %></td>
      <td><%= user.permission_level %></td>
      <td><%= l user.invitation_accepted_at.to_date, format: :digits if user.invitation_accepted? %></td>
      <td class="actions">
        <%= edit_btn edit_admin_user_path(user), element: user %>
        <%= delete_btn user, path: url_for([:admin, user]), element: user %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="paging">
  <%= render 'components/page_size' %>
  <%= paginate @users %>
</div>
