<h3 class="section-title lower">
  <%= t("dashboard.section.faqs.title") %>
</h3>

<% if faqs.empty? %>
  <%= render 'admin/dashboard/components/no_recent', icon_name: "envelope", type: Faq %>
<% else %>
  <table class="record-list">
    <tbody>
      <% faqs.each do | faq | %>
        <tr>
          <td colspan="3">
            <%= link_to faq.question.html_safe, faq_path(faq), title: faq.question.html_safe %>
          </td>
          <td colspan="2">
            <%= icon "folder" %> <%= t("activerecord.attributes.faq.categories.#{faq.category}") %>
          </td>
          <td class="actions">
            <%= link_to faq_path(faq), class: "btn" do %>
              <%= fa_icon "eye" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
