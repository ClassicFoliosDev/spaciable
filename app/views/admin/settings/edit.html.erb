<% breadcrumb :admin_settings_edit %>

<div class="section-header">
  <div class="section-title">
    <%= t(".title") %><br>
  </div>
</div>

<%= simple_form_for @setting, url: admin_settings_path do |f| %>
<% if @setting.errors.any? %>
<div class="submission-errors">
  <ul>
    <% @setting.errors.full_messages.each do |message| %>
    <li>
      <%= fa_icon "exclamation-circle" %>
      <%= message %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row files">
  <div class="row-item two-thirds">
    <%= f.label :help, t(".help"), class: "text-label" %>
    <div class="help-file setting">
      <span><%= @setting.help_short_name if @setting.help? %></span>
      <%= f.file_field :help, class: "file-upload" %>
      <%= label_tag(:setting_help, t("choose"), class: "choose-file") %>
    </div>
    <%= f.label :cookie, t(".cookie"), class: "text-label" %>
    <div class="cookie-file setting">
      <span><%= @setting.cookie_short_name if @setting.cookie_policy? %></span>
      <%= f.file_field :cookie_policy, class: "file-upload" %>
      <%= label_tag(:setting_cookie_policy, t("choose"), class: "choose-file") %>
    </div>
    <%= f.label :privacy, t(".privacy"), class: "text-label" %>
    <div class="privacy-file setting">
      <span><%= @setting.privacy_short_name if @setting.privacy_policy? %></span>
      <%= f.file_field :privacy_policy, class: "file-upload" %>
      <%= label_tag(:setting_privacy_policy, t("choose"), class: "choose-file") %>
    </div>
    <%= f.label :url, t(".url"), class: "text-label intro-text" %>
    <div class="intro-video setting">
      <%= f.input :video_link, placeholder: t(".video_link_placeholder"), label: false %>
      <span class="embeddable-text"><%= t(".embeddable") %></span><br/>
    </div>
    <%= f.label :enable_intro_video, t(".enable_intro_video"), class: "text-label intro-text" %>
    <div class="enable-intro-video setting">
      <%= f.check_box :intro_video_enabled %>
      <p class="checkbox-description"><%= t(".enable_intro_video_description") %></p>
    </div>
  </div>
</div>

<div class="form-actions-footer-container">
  <div class="form-actions-footer">
    <%= link_to t(".back"), admin_settings_path, class: "btn" %>
    <%= f.submit t(".submit"), class: "btn-form-submit btn-primary" %>
  </div>
</div>
<% end %>
