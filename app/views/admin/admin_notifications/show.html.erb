<% breadcrumb :admin_admin_notification, @admin_notification %>

<div class="section-header">
  <div class="section-title">
    <%= @admin_notification.subject %><br>
  </div>
</div>

<div class="row notification">
  <div class="row-item two-thirds">
    <p><%= @admin_notification.created_at.strftime("%d %B, %Y") %></p>
    <%= label_tag(t(".sent_to")) %>
    <span><%= @admin_notification.sent_to %></span><br/><br/>
    <%= label_tag(AdminNotification.human_attribute_name(:message)) %>
    <span><%= simple_format @admin_notification.message %></span>
  </div>
</div>

<div class="form-actions-footer-container">
  <div class="form-actions-footer">
    <%= link_to t(".back"), admin_admin_notifications_path, class: "btn" %>
  </div>
</div>
