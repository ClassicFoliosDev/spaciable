<%= simple_form_for([parent, contact]) do |f| %>
  <% if contact.errors.any? %>
    <div class="submission-errors">
      <ul>
        <% contact.errors.full_messages.each do |message| %>
          <li>
            <%= fa_icon "exclamation-circle" %>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row contact">
    <div class="row-item third">
      <fieldset>
        <div class="image-container">
          <%= f.input :picture, label: t(".picture"), as: :image_preview, input_html: { preview_version: :thumbnail } %>
        </div>
        <%= f.input :organisation %>
        <div class="ui-front select-container">
          <%= f.input :contact_type, label: t(".contact_type"), as: :select, collection: contact_types_collection, include_blank: true %>
        </div>
        <%= f.input :position %>
        <div class="ui-front select-container">
          <%= f.input :category, label: t(".category"), as: :select, collection: contact_categories_collection, include_blank: false %>
        </div><br/>
        <%= f.label :pinned, t(".pinned") %>
        <%= f.check_box :pinned %>
        <p class="checkbox-description"><%= t(".pinned_description") %></p>
      </fieldset>
    </div>
    <div class="row-item third">
      <fieldset>
        <div class="ui-front select-container">
          <%= f.input :title, as: :select, collection: contact_titles_collection, include_blank: false %>
        </div>
        <%= f.input :first_name, label: t(".first_name") %>
        <%= f.input :last_name, label: t(".last_name") %>
        <%= f.input :email, label: t(".email") %>
        <%= f.input :phone, label: t(".contact") %>
        <%= f.input :mobile, label: t(".mobile") %>

      </fieldset>
    </div>
  </div>

  <div class="form-actions-footer-container">
    <div class="form-actions-footer">
      <% if parent %>
        <%= link_to t(".back"), [parent, :contacts], class: "btn" %>
      <% else %>
        <%= link_to t(".back"), contact, class: "btn" %>
      <% end %>
      <%= f.submit t(".submit"), class: "btn-form-submit btn-primary" %>
      <div class="notify">
        <%= label_tag t(".notify") %>
        <%= f.check_box :notify %>
      </div>
    </div>
  </div>
<% end %>
