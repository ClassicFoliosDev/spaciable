<% breadcrumb :contacts, @parent %>

<div class="contact-index">
  <%= render @parent, active_plots_count: @active_plots_count, completed_plots_count: @completed_plots_count,
      expired_plots_count: @expired_plots_count, resident_count: @resident_count,
      activated_resident_count: @activated_resident_count, phase: @parent %>

  <% if @parent.is_a? Phase %>
    <%= render 'components/tabs', tabs: phase_tabs(@phase, @active_tab, current_user) %>
  <% else %>
    <%= render 'components/tabs', tabs: tabs_for(@parent, "contacts"), parent: @parent %>
  <% end %>

  <%= render_collection @contacts, parent: @parent, new_contact: @contact %>
</div>
