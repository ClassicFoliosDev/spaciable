<% if parent.is_a?(Phase) && parent.free? %>
  <%= render "components/admin/popup", title: t("restricted.contacts.phase.title"), preference: :show_phase_document_restriction_dialog, help: [t("restricted.contacts.phase.free")], warn: true %>
<% elsif any_phases_free?(parent) %>
  <%= render "components/admin/popup", title: t("restricted.contacts.title"), preference: :show_document_restriction_dialog, help: [t("restricted.contacts.free")], warn: true %>
<% end %>

<% if collection.empty? %>
  <div class="section-actions">
    <%= render 'components/admin/conveyancing', parent: parent %>
  </div>
  <%= render 'components/empty_list', icon_name: "vcard", type: Contact, parent: parent %>
<% else %>
  <div class="section-actions">
    <%= render 'components/admin/conveyancing', parent: parent %>
    <% if can_create(Contact, parent) %>
      <% unless parent.expired? && !(current_user.cf_admin?) ||
                free_phase_at_feature_limit?(parent, parent.contacts) %>
          <%= link_to [:new, parent, :contact], class: "btn btn-primary" do %>
            <i class="fa fa-plus"></i>
            <span class="btn-label"><%= t(".create") %></span>
          <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="contacts">
    <table class="record-list">
      <thead>
        <tr>
          <th class="icon" style="text-align:center;"><%= t(".icon") %></th>
          <th colspan="3"><%= sortable(Contact, :last_name, t(".name")) %></th>
          <th colspan="3"><%= sortable(Contact, :position) %></th>
          <th colspan="2"><%= sortable(Contact, :category) %></th>
          <th colspan="2"><%= sortable(Contact, :updated_at, t(".last_edited")) %></th>
          <th colspan="2">&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% collection.each do |contact| %>
        <tr>
          <td style="text-align:center;"><%= image_tag contact.picture.url :thumbnail if contact.picture? %></td>
          <td colspan="3"><%= link_to contact, contact_path(contact) %></td>
          <td colspan="3"><%= contact.position %></td>
          <td colspan="2"><%= t("activerecord.attributes.contact.categories.#{contact.category}") if contact.category %></td>
          <td colspan="2"><%= l contact.updated_at.to_date, format: :digits %></td>
          <td colspan="2" class="actions">
            <%= (edit_btn edit_contact_path(contact), element: contact) unless parent.expired? && !(current_user.cf_admin?) %>
            <%= (delete_btn contact, path: contact_path(contact), element: contact) unless parent.expired? && !(current_user.cf_admin?) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="paging">
      <%= render 'components/page_size' %>
      <%= paginate collection %>
    </div>
  </div>
<% end %>
