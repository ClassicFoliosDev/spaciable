<% breadcrumb :contact, @contact %>

<div class="section-header">
  <div class="section-title">
    <%= @contact %><br>
  </div>
  <div class="section-data">
    <%= (edit_btn [:edit, @contact], element: @contact) unless @contact.expired? && !(current_user.cf_admin?) %>
  </div>
</div>

<div class="row contact">
  <div class="row-item third">
    <div class="contact-picture">
      <%= image_tag @contact.picture.url :thumbnail if @contact.picture? %>
    </div>
    <div class="contact-name">
      <%= label_tag(:name) %>
      <span><%= t("activerecord.attributes.contact.titles.#{@contact.title}") if @contact.title %>
            <%= " " + @contact.first_name + " " + @contact.last_name %></span>
    </div>
    <div class="organisation">
      <%= label_tag(:organisation) %>
      <span><%= @contact.organisation %></span>
    </div>
    <div class="position">
      <%= label_tag(:position) %>
      <span><%= @contact.position %></span>
    </div>
    <div class="category">
      <%= label_tag(:category) %>
      <span><%= t("activerecord.attributes.contact.categories.#{@contact.category}") if @contact.category %></span>
    </div>
  </div>
  <div class="row-item third">
    <div class="email">
      <%= label_tag(:email) %>
      <span><%= @contact.email %></span>
    </div>
    <div class="phone">
      <%= label_tag(:phone) %>
      <span><%= @contact.phone %></span>
    </div>
    <div class="mobile">
      <%= label_tag(:mobile) %>
      <span><%= @contact.mobile %></span>
    </div>
  </div>
</div>

<div class="form-actions-footer-container">
  <div class="form-actions-footer">
    <%= link_to t(".back"), [@parent, :contacts], class: "btn" %>
  </div>
</div>
