<div class="section-header">
  <div class="section-title">
    <div><%= appliance_manufacturer.name %></div><br/>
    <span class="about"><strong><%= t(".link") %></strong><%= appliance_manufacturer.link %></span>
  </div>

  <div class="section-data">
    <span class="right">
      <%= edit_btn edit_appliance_manufacturer_path, element: appliance_manufacturer %>
    </span>
  </div>
</div>

<div class="row appliance_manufacturer">
  <div class="row-item half">
    <h5><%= t(".appliance_categories") %></h5>
    <% ApplianceCategory.all.each do | category | %>
      <span><%= category %></span><br>
    <% end %>
  </div>
</div>
