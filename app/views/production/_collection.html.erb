<div class="production">

  <div class="section-actions">
    <%= render 'components/admin/conveyancing', parent: parent %>

    <% if can_create(Plot, current_user.permission_level) %>
      <%= link_to [:new, parent, :plot], class: "btn btn-primary" do %>
        <i class="fa fa-plus"></i>
        <span class="btn-label"><%= t(".add") %></span>
      <% end %>
      <% if parent.crm %>
        <%= link_to phase_import_index_path(parent), class: "btn btn-primary" do %>
          <i ></i>
          <span class="btn-label"><%= t(".sync") %></span>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <% showing_icons = current_user&.cf_admin? ||
                     collection.map { |plot| can? :cas_update, plot }
                     .include?(true) %>

  <table class="record-list plots">
    <thead>
      <tr>
        <th><%= sortable(Plot, :number, t(".name")) %></th>
        <% unless parent.developer.country.spain? %>
          <th><%= sortable({Plot => Address}, :prefix, t(".prefix")) %></th>
        <% end %>
        <th><%= sortable(Plot, :house_number, t(".#{parent.developer.country.name}.house_number")) %></th>
        <th><%= sortable({Plot => Address}, :building_name, t(".#{parent.developer.country.name}.building_name")) %></th>
        <th><%= sortable({Plot => Address}, :road_name, t(".#{parent.developer.country.name}.road_name")) %></th>
        <th><%= sortable({Plot => Address}, :postcode, t(".#{parent.developer.country.name}.postcode")) %></th>
        <th><%= sortable({Plot => UnitType}, :id, t(".unit_type")) %></th>
        <th><span class="date"><%= sortable(Plot, :reservation_release_date, t(".date_r")) %></span>
            <span class="date"><%= sortable(Plot, :completion_release_date, t(".date_c")) %></span></th>
       <% if showing_icons %>
          <th>&nbsp;</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% collection.each do |plot| %>
        <tr data-plot="<%= plot.id %>">
          <td><%= link_to plot, url_for(plot), title: plot %></td>
          <% unless parent.developer.country.spain? %>
            <td><%= plot.prefix %></td>
          <% end %>
          <td><%= plot.house_number %></td>
          <td><%= plot.building_name %></td>
          <td><%= plot.road_name %></td>
          <td><%= plot.postcode %></td>
          <td><%= plot.unit_type %></td>
          <% res = "white" %>
          <% comp = "white" %>
          <% if plot.reservation_release_date? %>
            <% res = plot.expired? ? "red" : "green" %>
          <% else %>
          <% end %>
          <% if plot.completion_release_date? %>
            <% comp = plot.expired? ? "red" : "green" %>
          <% end %>
          <td><span class = 'circle <%= res %>'>&nbsp;</span>
              <span class = 'circle <%= comp %>'>&nbsp;</span></td>
          <% if showing_icons %>
            <td class="actions">
              <%= edit_btn [:edit, plot], element: plot %>
              <%= delete_btn plot, path: url_for(plot), element: plot %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="paging">
    <%= render 'components/page_size' %>
    <%= paginate collection %>
  </div>
</div>
