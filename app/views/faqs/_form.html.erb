<%= simple_form_for([parent, faq]) do |f| %>
    <% if faq.errors.any? %>
        <div class="row">
          <div class="row-item">
            <div class="submission-errors">
              <ul>
                <% faq.errors.full_messages.each do |message| %>
                    <li>
                      <%= fa_icon "exclamation-circle" %>
                      <%= message %>
                    </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
    <% end %>

    <div class="row faq">
      <div class="row-item two-thirds">
        <fieldset>
          <%= f.input :question, as: :string %>
          <%= f.input :answer, as: :ckeditor %>
        </fieldset>
      </div>

      <div class="row-item third">
        <div class="faq-category ui-front select-container">
          <fieldset>
            <%= f.hidden_field :faq_type_id, value: faq_type.id %>
            <%= f.association :faq_category, label: t(".category"), collection: faq_type.categories %>
            <label><%= t(".faq_package") %></label>
              <% faq.faq_package = :custom if faq.faq_package.blank? %>
              <p><%= t("faq_package.#{faq.faq_package}") %></p>
            </fieldset>
          </fieldset>
        </div>
      </div>
    </div>

    <div class="form-actions-footer-container">
      <div class="form-actions-footer">
        <% if parent %>
          <%= link_to t(".back"), [parent, :faqs, active_tab: faq_type.id], class: "btn" %>
        <% else %>
          <%= link_to t(".back"), faq, class: "btn" %>
        <% end %>
        <%= f.submit t(".submit"), class: "btn-form-submit btn-primary" %>
        <div class="notify">
          <%= label_tag t(".notify") %>
          <%= f.check_box :notify %>
        </div>
      </div>
    </div>
<% end %>

