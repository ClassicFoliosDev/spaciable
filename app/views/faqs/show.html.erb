<% breadcrumb :faq, @faq %>

<div class="section-header">
  <h3 class="section-title">
    <i class="fa fa-question-circle"></i>
    <%= t(".title", parent: @parent) %><br>
  </h3>
</div>

<div class="row">
  <div class="row-item two-thirds">
    <fieldset>
      <%= label_tag(Faq.human_attribute_name(:question)) %>
      <%= @faq.question %>
      <br>
      <br>
      <%= label_tag(Faq.human_attribute_name(:answer)) %>
      <%= raw @faq.answer %>
    </fieldset>
  </div>
  <div class="row-item third">
    <fieldset>
      <%= label_tag(Faq.human_attribute_name(:category)) %>
      <%= t_enum(Faq, :category, @faq.category) %>
    </fieldset>
  </div>
</div>

<div class="form-actions-footer-container">
  <div class="form-actions-footer">
    <%= link_to t(".back"), [@parent, :faqs], class: "btn" %>
  </div>
</div>
