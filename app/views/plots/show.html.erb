<% breadcrumb :plot, @plot %>

<div class="section-header">
  <%= render @plot %>
</div>

<%= render 'components/tabs', tabs: plot_tabs(@plot, @active_tab), parent: @plot.unit_type %>
<%= render_collection @collection, parent: @collection_parent %>

<div class="form-actions-footer-container">
  <div class="form-actions-footer">
    <%= link_to t(".back"), [@plot.parent, :plots], class: "btn" %>
  </div>
</div>
