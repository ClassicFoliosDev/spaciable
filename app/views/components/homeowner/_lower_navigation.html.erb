<div class="quick-links">
  <div class="dashboard-link">
    <%= link_to dashboard_path, class: "branded-btn-inverted" do %>
    <span class="dashboard-link"><i class="fa fa-home"></i> <span class="text"> <%= t(".dashboard") %></span></span>
    <% end %>
  </div>
  <div class="notifications-link">
    <%= link_to homeowners_notifications_path, class: "branded-secondary link-item" do %>
      <% if unread_count.positive? %>
        <sup class="unread"><%= unread_count %></sup>
        <i class="fa fa-envelope-o branded-primary"></i>
      <% else %>
        <i class="fa fa-envelope-open-o branded-primary"></i>
      <% end %>
    <% end %>
  </div>
  <!-- search bar mobile view only -->
  <div class="searchbar-link">
    <i class="fa fa-search branded-primary" id="lowerSearchLink"></i>
  </div>
</div>

<div class="lower-navbar-search" id="lowerSearch">
  <%= render "components/search" %>
</div>