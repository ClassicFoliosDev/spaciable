<style>

  <% if brand.bg_color? %>
    .homeowner-body {
      background-color: <%= brand.bg_color %>;
    }
  <% end %>

  <% if brand.text_color? %>
    .brand-text {
      color: <%= brand.text_color %>;
    }
  <% end %>

  <% if brand.content_bg_color? %>
    .brand-content {
      background-color: <%= brand.content_bg_color %>;
    }
  <% end %>

  <% if brand.content_text_color? %>
  .brand-border {
     border-color: <%= brand.content_text_color %>;
  }
  <% end %>

  <% if brand.button_color? %>
    .homeowner-btn {
      background-color: <%= brand.button_color %>;
    }

    .homeowner-btn.alt {
      border-color: <%= brand.button_color %>;
      color: <%= brand.button_color %>;
    }
  <% end %>

  <% if brand.button_text_color? %>
    .homeowner-btn {
      color: <%= brand.button_text_color %>;
      border-color: <%= brand.button_text_color %>;
    }

    .homeowner-btn.alt {
      background-color: <%= brand.button_text_color %>;
    }
  <% end %>

  <% if brand.banner? %>
    .brand-hero {
      background-image: url(<%= brand.banner.url&.html_safe %>);
    }
  <% end %>

</style>
