<style data-test="brand-style-overrides">

<%-# ------------------------------------------ -%>
<%-# ------------- BODY BACKGROUND ------------ -%>

  <% if brand.branded_bg_color %>
    .branded-body {
      background-color: <%= brand.branded_bg_color %>;
    }
  <% else %>
    .branded-body {
      <%= Brand.branded_body_default %>
    }
  <% end %>

<%-# ------------------------------------------ -%>
<%-# ------------ NAVIGATION BARS ------------- -%>

  <%-# ---------- NAVIGATION BACKGROUND ---------- -%>
  <% if brand.branded_header_color %>
    .branded-nav-background {
      background-color: <%= brand.branded_header_color %>;
    }

    <%-# ------------------ LOWER ------------------ -%>
    .lower-navigation .branded-nav-background {
      background-color: <%= brand.branded_header_color %>;
      border-top: none;
    }

    <%-# ------------ ACCOUNT DROPDOWN ------------- -%>
    .main-navigation .nav-inner .account-navigation .dropdown,
    .main-navigation .nav-inner .account-navigation .dropdown-content {
      background-color: <%= brand.branded_header_color %>;
    }

    <%-# ----- ACCOUNT DROPDOWN - LINKS HOVER ------ -%>
    .main-navigation .nav-inner .account-navigation .dropdown-content .dropdown-link:hover,
    .main-navigation .nav-inner .account-navigation .dropdown-content .dropdown-link .navigation-btn:hover,
    .main-navigation .nav-inner .navbar-menu .navbar .third .links .navbar-item:hover {
      background-color: #B3B5B7;
    }

    <%-# ------- ACCOUNT DROPDOWN - BORDERS -------- -%>
    .main-navigation .nav-inner .account-navigation .dropdown-content {
      border: 2px solid #B3B5B7;
    }
    .main-navigation .nav-inner .account-navigation .dropdown-content .sign-out {
      border-top: 2px solid #B3B5B7;
    }

    .main-navigation .nav-inner .account-navigation .links-list,
    .main-navigation .nav-inner .account-navigation .hidden-address,
    .main-navigation .nav-inner .navbar-menu .navbar .third {
      border-bottom: 2px solid #B3B5B7;
    }

    <%-# --------------- BURGER MENU --------------- -%>
    .main-navigation .nav-inner .navbar-menu {
      background-color: <%= brand.branded_header_color %>;
    }

    .main-navigation .nav-inner .account-navigation .dropdown-content .sign-out {
      border-top: none;
    }

    <%-# ----------------- FOOTER ------------------ -%>
    .footer {
      background-color: <%= brand.branded_header_color %>;
    }

    <%-# ----------- LOWER NAV BUTTON ------------ -%>
    .lower-navigation .lower-nav-button {
      color: <%= brand.branded_header_color %>;
      border-color: <%= brand.branded_header_color %>;
    }

    .lower-navigation .lower-nav-button:hover {
      background-color: <%= brand.branded_header_color %>;
    }
  <% end %>

  <%-# ------------ NAVIGATION TEXT ------------- -%>
  <% if brand.branded_topnav_text_color %>
    .branded-nav-text,
    .branded-nav-text a {
      color: <%= brand.branded_topnav_text_color %>;
    }

    <%-# --------------- BURGER MENU --------------- -%>
    .main-navigation .nav-inner .burger-navigation .burger-bar {
      background-color: <%= brand.branded_topnav_text_color %>;
    }

    <%-# ----------------- FOOTER ------------------ -%>
    .footer .copyright,
    .footer a {
      color: <%= brand.branded_topnav_text_color %>;
    }

    <%-# --------------- SEARCH BAR ---------------- -%>
    .nav-inner .search-container input,
    .nav-inner .search-container .btn {
      color: <%= brand.branded_topnav_text_color %> !important;
    }
    .nav-inner .search-container .btn:hover {
      background-color: <%= brand.branded_topnav_text_color %> !important;
      color: #FFF !important;
    }

    <%-# ----------- LOWER NAV BUTTON ------------ -%>
    .lower-navigation .lower-nav-button {
      background-color: <%= brand.branded_topnav_text_color %>;
    }

    .lower-navigation .lower-nav-button:hover {
      color: <%= brand.branded_topnav_text_color %>;
      border-color: <%= brand.branded_topnav_text_color %>;
    }
  <% end %>





  <% if brand.branded_text_color %>
    .branded-text {
      color: <%= brand.branded_text_color %>;
    }

    .branded-primary-text {
     color: <%= brand.branded_text_color %>;
     }

    <%-# --- Specific elements that need overriding --- -%>

    .unlet-plot .letable-plot .letting-btn {
      border-color: <%= brand.branded_text_color %>;
      color: <%= brand.branded_text_color %>;
    }
    .unlet-plot .letable-plot .letting-btn:hover {
      border-color: <%= brand.branded_text_color %>;
      background-color: <%= brand.branded_text_color %>;
    }
    .snag-comment-form .message textarea {
      color: <%= brand.branded_text_color %>;
      border-color: <%= brand.branded_text_color %>;
    }
    .snag-form input, .snag-form textarea {
      color: <%= brand.branded_text_color %>;
      border-color: <%= brand.branded_text_color %>;
    }
    .other-residents .prompt-remove {
      border-color: <%= brand.branded_text_color %>;
    }
    .other-residents .prompt-remove:hover {
      background-color: <%= brand.branded_text_color %>;
    }
    .resident-details input, .resident-details input:focus, .resident-details label,
    .resident-details .ui-state-default {
      color: <%= brand.branded_text_color %> !important;
      border-color: <%= brand.branded_text_color %> !important;
    }
    .private-document .actions .btn {
      color: <%= brand.branded_text_color %>;
    }
    .plot-choices .homeowner-container .ui-state-default {
      color: <%= brand.branded_text_color %> !important;
      border-color: <%= brand.branded_text_color %> !important;
    }
    .plot-choices .homeowner-container h3 {
      color: <%= brand.branded_text_color %> !important;
    }
    .plot-choices .homeowner-container .choice-item {
      border-color: <%= brand.branded_text_color %> !important;
    }


  <% else %>
    .branded-text {
      <%= Brand.branded_text_default %>
    }

    .branded-primary-text {
      <%= Brand.branded_text_default %>
    }
    .plot-choices .homeowner-container h3 {
      <%= Brand.branded_secondary_default %>
    }
  <% end %>

  <% if brand.branded_content_bg_color %>
    .branded-content {
      background-color: <%= brand.branded_content_bg_color %>;
    }
    .branded-input input:-webkit-autofill {
      -webkit-box-shadow: 0 0 0 30px <%= brand.branded_content_bg_color %> inset;
    }
    .letting-btn {
      background-color: <%= brand.branded_content_bg_color %>;
    }
    .unlet-plot .letable-plot .letting-btn:hover {
      color: <%= brand.branded_content_bg_color %>;
    }
  <% else %>
    .branded-content {
      <%= Brand.branded_content_default %>
    }

    .branded-input input:-webkit-autofill {
      <%= Brand.branded_autofill_default %>
    }
  <% end %>

  <% if brand.branded_content_text_color %>
    .branded-border {
      border-color: <%= brand.branded_content_text_color %>;
    }

    .branded-input input[type="email"] {
      border-color: <%= brand.branded_content_text_color %>;
    }

    .branded-input input[type="password"] {
      border-color: <%= brand.branded_content_text_color %>;
    }

    .unlet-plot .letable-plot {
      border-color: <%= brand.branded_content_text_color %>;
    }

    .faqs dt {
      border-color: <%= brand.branded_content_text_color %> !important;
    }

  <% else %>
    .branded-border {
      <%= Brand.branded_border_default %>
    }

    .branded-input input[type="email"] {
      <%= Brand.branded_border_default %>
    }

    .branded-input input[type="password"] {
      <%= Brand.branded_border_default %>
    }
  <% end %>

  <% if brand.branded_button_color %>
    .branded-btn {
      background-color: <%= brand.branded_button_color %>;
   }

    .branded-btn:hover {
      color: <%= brand.branded_button_color %> !important;
    }

    .branded-titles h2 {
      color: <%= brand.branded_button_color %>;
    }

    .branded-titles h2:last-child {
      color: <%= brand.branded_button_color %>;
    }

    .branded-primary-text a {
      color: <%= brand.branded_button_color %>;
    }

    .branded-primary-text label.checkbox {
      color: <%= brand.branded_button_color %>;
    }
  <% else %>
    .branded-btn {
      <%= Brand.branded_static_background_default %>
    }

    .branded-btn:hover {
      <%= Brand.branded_hover_background_default %>
    }

    .branded-titles h2.top-title {
      <%= Brand.branded_top_header_default %>
    }

    .branded-titles h2.second-title {
      <%= Brand.branded_second_header_default %>
    }
  <% end %>

  <% if brand.branded_button_text_color %>
    .branded-btn {
      color: <%= brand.branded_button_text_color %> !important;
      border-color: <%= brand.branded_button_text_color %>;
    }

    .branded-btn:hover {
      background-color: <%= brand.branded_button_text_color %>;
    }

    .branded-primary-text {
      color: <%= brand.branded_button_color %>;
    }

    .branded-primary-text label.checkbox {
      color: <%= brand.branded_button_color %>;
    }

    .branded-content label.checkbox i {
      color: <%= brand.branded_button_text_color %>;
      border-color: <%= brand.branded_button_text_color %>;
    }

    .branded-content label.checkbox input[type=checkbox]:checked + i:before {
      color: <%= brand.branded_button_text_color %>;
    }

    .document-permission {
      color: <%= brand.branded_button_text_color %> !important;
    }

  <% else %>
    .branded-btn {
      <%= Brand.branded_static_text_default %>
      <%= Brand.branded_static_border_default %>
    }

    .branded-btn:hover {
      <%= Brand.branded_hover_text_default %>
      <%= Brand.branded_hover_border_default %>
    }

    .branded-primary-text {
      <%= Brand.branded_primary_text_default %>
    }

    .branded-primary-text label.checkbox {
      <%= Brand.branded_input_text_default %>
    }
    .document-permission {
      <%= Brand.branded_primary_default %>
    }
  <% end %>


  <%-# --- Inverted button colours --- -%>

  <% if brand.branded_button_color %>
    .branded-btn-inverted {
      background-color: <%= brand.branded_button_text_color %>;
   }

    .branded-btn-inverted:hover {
      color: <%= brand.branded_button_text_color %>;
    }
  <% else %>
    .branded-btn-inverted {
      <%= Brand.branded_hover_background_default %>
    }

    .branded-btn-inverted:hover {
      <%= Brand.branded_static_background_default %>
    }
  <% end %>

  <% if brand.branded_button_text_color %>
    .branded-btn-inverted {
      color: <%= brand.branded_button_color %>;
      border-color: <%= brand.branded_button_text_color %>;
    }

    .branded-btn-inverted:hover {
      background-color: <%= brand.branded_button_color %>;
    }
  <% else %>
    .branded-btn-inverted {
      <%= Brand.branded_hover_text_default %>
      <%= Brand.branded_static_border_default %>
    }

    .branded-btn-inverted:hover {
      <%= Brand.branded_static_text_default %>
      <%= Brand.branded_static_border_default %>
    }
  <% end %>


  <%-# --- Banner --- -%>

  <% if brand.branded_banner %>
    .branded-hero {
      background-image: url(<%= brand.branded_banner&.html_safe %>);
    }
  <% else %>
    .branded-hero {
      background-image: url("<%= asset_path('default_banner.png') %>");
    }
  <% end %>


  <%-# --- External Branding --- -%>

  <%-# --- Branding for box (left/right) colour --- -%>

  <% if brand.branded_login_box_left_color %>
    .branded-left-box, .branded-left-box .preamble {
      background-image: none;
      background-color: <%= brand.branded_login_box_left_color %>;
    }
  <% else %>
    .branded-left-box { <%= Brand.branded_left_box_default %> }
  <% end %>

  <% if brand.branded_login_box_right_color %>
    .branded-right-box, .invitation .branded-right-box {
      background-color: <%= brand.branded_login_box_right_color %>;
    }
  <% else %>
    .branded-right-box {
      <%= Brand.branded_right_box_default %>
    }
  <% end %>


  <%-# --- Branding for text (left/right) text colour --- -%>

  <% if brand.branded_text_right_color %>
    .branded-external-text, .branded-external-text a, .branded-external-text label {
      color: <%= brand.branded_text_right_color %>;
    }
  <% else %>
    .branded-external-text, .branded-external-text a, .branded-external-text label {
      <%= Brand.branded_external_text_default %>
    }
    .branded-external-text h2 {
      <%= Brand.branded_primary_default %>
    }
  <% end %>

  <% if brand.branded_text_left_color %>
  .branded-left-text {
    color: <%= brand.branded_text_left_color %>;
  }
  .branded-left-text h2 {
    color: <%= brand.branded_text_left_color %>;
  }
  .branded-heading-two {
    color: <%= brand.branded_text_left_color %>;
  }
  .branded-left-text p {
    color: <%= brand.branded_text_left_color %> !important;
  }
  .branded-left-text li {
    color: <%= brand.branded_text_left_color %> !important;
  }
  <% else %>
  .branded-left-text {
    <%= Brand.branded_left_text_default %>
  }
  .branded-left-text h2 {
    <%= Brand.branded_primary_default %>
  }
  .branded-heading-two {
    <%= Brand.branded_external_text_default %>
  }
  <% end %>


  <%-# --- Branding for submit / login button --- -%>
  <%-# --- Both static and hover options need to be defined (or neither defined) in styling due to opposite-colour inheritance --- -%>

  <% if brand.branded_login_button_static_color %>
    .login .branded-submit, .invitation .branded-submit {
      background-color: <%= brand.branded_login_button_static_color %>;
    }
    .login .branded-submit:hover, .invitation .branded-submit:hover {
      color: <%= brand.branded_login_button_static_color %>;
      border-color: <%= brand.branded_login_button_static_color %>;
    }
  <% else %>
    .login .branded-submit, .invitation .branded-submit {
      background-color: #FFFFFF; // $ui-white;
    }
    .login .branded-submit:hover, .invitation .branded-submit:hover {
      color: #FFFFFF; // $ui-white;
      border-color: #002A3A; // $primary-navy;
    }
  <% end %>

  <% if brand.branded_login_button_hover_color %>
    .login .branded-submit, .invitation .branded-submit {
      color: <%= brand.branded_login_button_hover_color %>;
      border-color: <%= brand.branded_login_button_hover_color %>;
    }
    .login .branded-submit:hover, .invitation .branded-submit:hover {
      background-color: <%= brand.branded_login_button_hover_color %>
    }
  <% else %>
    .login .branded-submit, .invitation .branded-submit {
      color: #002A3A; // $primary-navy;
      border-color: #002A3A; // $primary-navy;
    }
    .login .branded-submit:hover, .invitation .branded-submit:hover {
      background-color: #002A3A; // $primary-navy;
    }
  <% end %>


  <%-# --- Branding for input (email, password) box and checkbox --- -%>

  <% if brand.branded_content_box_color %>
    .branded-content-box input {
      background-color: <%= brand.branded_content_box_color %>;
    }
    .branded-content-box input:-webkit-autofill {
      -webkit-box-shadow: 0 0 0px 1000px <%= brand.branded_content_box_color %> inset;
    }
    .branded-content-box .branded-checkbox {
      background-color: <%= brand.branded_content_box_color %>;
      color: <%= brand.branded_content_box_color %>;
    }
  <% else %>
    .branded-content-box input {
      <%= Brand.branded_input_background_default %>
    }
    .branded-content-box input:-webkit-autofill {
      <%= Brand.branded_autofill_default %>
    }
    .branded-content-box .branded-checkbox {
      <%= Brand.branded_input_background_default %>
      <%= Brand.branded_checkbox_untick_default %>
    }
  <% end %>

  <% if brand.branded_content_box_text %>
    <%-# --- Inherit the checkmark colour from the input text colour --- -%>
    .branded-content-box input[type=checkbox]:checked + i:before {
      color: <%= brand.branded_content_box_text %>;
    }
    .branded-content-box input {
      color: <%= brand.branded_content_box_text %>;
    }
    .branded-content-box input:-webkit-autofill {
      -webkit-text-fill-color: <%= brand.branded_content_box_text %>;
    }
    .branded-content-box input::placeholder {
      color: <%= brand.branded_content_box_text %> !important;
    }
    .branded-content-box input:-ms-input-placeholder {
      color: <%= brand.branded_content_box_text %> !important;
    }
    .branded-content-box input::-ms-input-placeholder {
      color: <%= brand.branded_content_box_text %> !important;
    }
    }
  <% else %>
    .branded-content-box input[type=checkbox]:checked + i:before {
      color: #002A3A; // $primary-navy
    }
    .branded-content-box input {
      <%= Brand.branded_input_text_default %>
    }
    .branded-content-box input:-webkit-autofill {
      <%= Brand.branded_autofill_text_default %>
    }
  <% end %>

  <% if brand.branded_content_box_outline_color %>
    .branded-content-box input {
      border-color: <%= brand.branded_content_box_outline_color %>;
    }
    .branded-content-box input:focus {
      border-color: <%= brand.branded_content_box_outline_color %>;
    }
    .branded-content-box .branded-checkbox {
      border-color: <%= brand.branded_content_box_outline_color %>;
    }
    .branded-content-box input[type="email"] {
      border-color: <%= brand.branded_content_box_outline_color %> !important;
    }
    .branded-content-box input[type="email"]:focus {
      border-left: 5px solid <%=brand.branded_content_box_outline_color %> !important;
    }
    .branded-content-box input[type="password"] {
      border-color: <%= brand.branded_content_box_outline_color %> !important;
    }
    .branded-content-box input[type="password"]:focus {
      border-left: 5px solid <%=brand.branded_content_box_outline_color %> !important;
    }
  <% else %>
    .branded-content-box input {
      <%= Brand.branded_input_border_default %>
    }
    .branded-content-box input:focus {
      border-color: #c5d1d6; // $pale-navy;
    }
    .branded-content-box .branded-checkbox {
      border-color: #002A3A; // $primary-navy;
    }
  <% end %>
</style>
