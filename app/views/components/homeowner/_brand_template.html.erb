<style>

  <% if brand.branded_bg_color.present? %>
    .branded-body {
      background-color: <%= brand.branded_bg_color %>;
    }
  <% end %>

  <% if brand.branded_text_color.present? %>
    .branded-text {
      color: <%= brand.branded_text_color %>;
    }
  <% end %>

  <% if brand.branded_content_bg_color.present? %>
    .branded-content {
      background-color: <%= brand.branded_content_bg_color %>;
    }
  <% end %>

  <% if brand.branded_content_text_color.present? %>
  .branded-border {
     border-color: <%= brand.branded_content_text_color %>;
  }
  <% end %>

  <% if brand.branded_button_color.present? %>
    .branded-btn {
      background-color: <%= brand.branded_button_color %>;
    }

    .branded-btn.alt {
      border-color: <%= brand.button_color %>;
      color: <%= brand.branded_button_color %>;
    }
  <% end %>

  <% if brand.branded_button_text_color.present? %>
    .branded-btn {
      color: <%= brand.branded_button_text_color %>;
      border-color: <%= brand.branded_button_text_color %>;
    }

    .branded-btn.alt {
      background-color: <%= brand.branded_button_text_color %>;
    }
  <% end %>

  <% if brand.branded_banner.present? %>
    .branded-hero {
      background-image: url(<%= brand.branded_banner&.html_safe %>);
    }
  <% end %>

</style>
