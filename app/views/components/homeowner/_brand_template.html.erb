<style>

  .main-container {
    background-color: <%= brand.bg_color? ? brand.bg_color : "#FFFFFF" %>;
  }

  .card .card-header .card-title {
    color: <%= brand.text_color? ? brand.text_color : "#252C31" %>;
  }

  .card {
    background-color: <%= brand.content_bg_color? ? brand.content_bg_color : "#FFFFFF" %>;
  }

  .card.bordered {
    border-color: <%= brand.content_text_color? ? brand.content_text_color : "#EAEAEA" %>;
  }

  .homeowner-btn {
    background-color: <%= brand.button_color? ? brand.button_color : "#18A895" %>;
    border-color: <%= brand.button_color? ? brand.button_color : "#18A895" %>;
    color: <%= brand.button_text_color? ? brand.button_text_color : "#FFFFFF" %>;
  }

  .card.my-contacts .contact-actions i {
    color: <%= brand.button_color? ? brand.button_color : "#18A895" %>;
  }

  <% if brand.banner? %>
    .homeowner-view .hero {
      background-image: url(<%= brand.banner.url&.html_safe %>);
    }
  <% end %>

</style>
