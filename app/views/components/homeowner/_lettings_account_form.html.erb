<%= simple_form_for lettings_account, url: letting_path(current_resident), remote: true do |f| %>
  <%= f.hidden_field :first_name, value: current_resident.first_name %>
  <%= f.hidden_field :last_name, value: current_resident.last_name %>
  <%= f.hidden_field :email, value: current_resident.email %>

  <%= f.hidden_field :management %>
<% end %>