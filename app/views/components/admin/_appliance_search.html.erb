<div class="search">
  <%= simple_form_for ufilter, url: path do |f| %>
    <div class="row-item third appliance-filter">
      <div class="collapse"><i class="fa fa-angle-up"></i></div>
      <fieldset>
        <%= f.input :appliance_category_id,
          as: :select,
          collection: ApplianceCategory.all.order(:name),
          selected: ufilter.appliance_category_id,
          include_blank: t(".all") %>
        <%= f.input :appliance_manufacturer_id,
          as: :select,
          collection: ApplianceManufacturer.all.order(:name),
          selected: ufilter.appliance_manufacturer_id,
          include_blank: t(".all") %>
      </fieldset>
    </div>
    <div class="row-item third appliance-filter-selections">
      <div class="collapse"><i class="fa fa-angle-down"></i></div>
      <div class="filter-selections">

      </div>
    </div>
    <div class="row-item third search-appliance">
      <div class="search-container">
        <%= simple_fields_for :search do |s| %>
          <span>
            <%= s.text_field :search_appliance_text, class: "search-index-finish-field", autocomplete: "off", placeholder: search, data: {path: appliance_search_path}  %>
            <%= link_to "", class: "btn search-btn" do %>
              <i class="fa fa-search"></i>
            <% end %>
          </span>
        <% end %>
        <div class="search-results-container">
          <ul class="search-results"></ul>
        </div>
      </div>
    </div>
  <% end %>
</div>
