<div class="row-item third">
  <fieldset>
    <% if plot.nil? || !plot.persisted? %>
      <div class="plot-field">
        <%= f.input :copy_plot_numbers, as: :boolean, class: "copy-plot-numbers", label: t(".copy_plot_numbers") %>
      </div><br/>
    <% end %>
    <% if plot.nil? %><span class="bulk-check"><%= f.input_field :prefix_check, as: :boolean, label: false %></span><% end %>
    <div class="plot-field">
      <%= f.input :prefix, placeholder: t("addresses.placeholders.prefix"), label: t(".prefix") %>
    </div><br/>
    <% if plot.nil? %><span class="bulk-check"><%= f.input_field :house_number_check, as: :boolean, label: false %></span><% end %>
    <div class="plot-field">
      <%= f.input :house_number, label: t(".house_number") %>
    </div><br/>
    <% if plot.nil? %><span class="bulk-check"><%= f.input_field :building_name_check, as: :boolean, label: false %></span><% end %>
    <div class="plot-field">
      <%= f.input :building_name, label: false, placeholder: t("addresses.placeholders.building") %>
    </div><br/>
    <% if plot.nil? %><span class="bulk-check"><%= f.input_field :road_name_check, as: :boolean, label: false %></span><% end %>
    <div class="plot-field">
      <%= f.input :road_name, label: false, placeholder: t("addresses.placeholders.road") %>
    </div><br/>
    <% if plot.nil? %><span class="bulk-check"><%= f.input_field :postcode_check, as: :boolean, label: false %></span><% end %>
    <div class="plot-field">
      <%= f.input :postcode %>
    </div><br/>
    <% if plot.present? %>
      <%= f.input :locality, readonly: true, class: "readonly" %>
      <%= f.input :city, readonly: true, class: "readonly" %>
      <%= f.input :county, readonly: true, class: "readonly" %>
    <% end %>
  </fieldset>
</div>
