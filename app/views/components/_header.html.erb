<header>
  <label class="admin-trigger-label" for="navbar-trigger">
    <%= fa_icon "bars" %>
  </label>
  <input id="navbar-trigger" class="navbar-trigger" type="checkbox">
  <div class="logo">
    <%= image_tag 'ISYT-40px-01.png' %>
  </div>
  <% if current_user&.cf_admin? %>
    <%= render "components/search" %>
  <% elsif current_user %>
    <div class="feedback-container">
      <%= button_tag t(".feedback"), data: data_for_feedback(current_user.email), class: "right btn feedback-btn" %>
    </div>
  <% end %>
</header>
