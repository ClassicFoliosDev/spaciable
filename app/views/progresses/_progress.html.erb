<div class="section-actions">
  <%= render 'components/admin/conveyancing', parent: plot %>
</div>

<div class="plot-progress">
  <%= simple_form_for plot, url: plot_path(plot), html: { method: :put } do |f| %>
    <div class="row">
      <% unless plot.expired? && !(current_user.cf_admin?) %>
        <div class="row-item half">
          <div class="plot_progress ui-front select-container">
            <label><%= t(".previous") %></label>
            <span class="current-progress"><%= plot&.build_step_title %></span>
            <label><%= t(".update_progress") %></label>
            <%= f.input :build_step_id, as: :select, collection: progress_collection(plot), label: false  %>
          </div>
          <% unless plot.expired? && !(current_user.cf_admin?) %>
          <div class="submit">
            <%= f.submit t(".submit"), class: "btn-form-submit btn-primary" %>
            <div class="notify">
              <p class="checkbox-description"><%= t(".notify") %></p>
              <%= f.check_box :notify, label: false %>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>


  <% end %>
</div>

