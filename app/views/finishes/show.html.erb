<% breadcrumb :finish, @finish %>

<div class="section-header">
  <div class="section-title">
    <%= @finish.name %><br>
  </div>
  <div class="section-data">
    <%= edit_btn [:edit, @finish], element: @finish %>
    <%= clone_btn clone_finish_path(@finish), element: @finish %>
    <% if current_page?(action: :show) && @warn_on_edit %>
      <div id="confirm-edit" data-title="<%= t('.confirm-edit.title', name: @finish.name)%>">
        <div id="body">
          <p><%= simple_format t('.confirm-edit.body', name: @finish.name, origin: @origin) %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row finish">
  <div class="row-item third">
    <% if @finish.picture? %>
      <div class="finish-picture">
        <%= label_tag(:image) %>
        <%= image_tag @finish.picture.url %>
      </div>
    <% end %>
    <div class="description">
      <%= label_tag(:notes) %>
      <span><%= @finish.description %></span>
    </div>
  </div>
  <div class="row-item third">
    <div class="category">
      <%= label_tag(:category) %>
      <span><%= @finish.finish_category %></span>
    </div>
    <div class="type">
      <%= label_tag(:type) %>
      <span><%= @finish.finish_type %></span>
    </div>
    <div class="manufacturer">
      <%= label_tag(:manufacturer) %>
      <span><%= @finish.finish_manufacturer %></span>
    </div>
  </div>
</div>

<div class="form-actions-footer-container">
  <div class="form-actions-footer">
    <%= link_to t(".back"), finishes_path, class: "btn" %>
  </div>
</div>
