<div class="section-actions">
  <% if room %>
    <%= link_to new_room_finish_room_path(room), class: "btn btn-primary" do %>
      <i class="fa fa-plus"></i>
      <span class="btn-label"><%= t(".add_finish") %></span>
    <% end %>
  <% else %>
    <%= link_to new_finish_path, class: "btn btn-primary" do %>
      <i class="fa fa-plus"></i>
      <span class="btn-label"><%= t(".create") %></span>
    <% end %>
  <% end %>
</div>

<div class="record-list">
  <dl class="finishes">
    <dt class="record-list-item record-header">
    <div class="record-list-header-content">
      <span class="icon">&nbsp;</span>
      <span><%= sortable(Finish, :name) %></span>
      <span><%= sortable({ Finish => FinishCategory }, :name, t(".finish_category")) %></span>
      <span><%= sortable({ Finish => FinishType }, :name, t(".finish_type")) %></span>
      <span><%= sortable({ Appliance => Manufacturer }, :name, t(".manufacturer")) %></span>
      <span><%= sortable(Finish, :updated_at) %></span>
    </div>
    </dt>
    <% collection.each do |finish| %>
        <dd class="record-list-item" data-finishes="<%= finish.id %>">
          <div class="record-list-item-actions">
            <%= edit_btn edit_finish_path(finish) %>
            <% if room %>
              <%= link_to remove_finish_path(room: room, finish: finish), class: "btn remove" do %>
                <%= fa_icon "times" %>
              <% end %>
            <% else %>
              <%= delete_btn finish %>
            <% end %>
          </div>
          <div class="record-list-item-content">
            <span class="icon"><%= image_tag finish.picture if finish.picture? %></span>
              <%= link_to finish.name, finish_path(finish)%>
            <span>
              <%= finish.finish_category %>
            </span>
            <span>
              <%= finish.finish_type %>
            </span>
            <span>
              <%= finish.manufacturer %>
            </span>
            <span>
              <%= l finish.updated_at.to_date, format: :digits %>
            </span>
          </div>
        </dd>
    <% end %>
  </dl>
</div>

<div class="paging">
  <%= render 'components/page_size' %>
  <%= paginate collection %>
</div>
