<% breadcrumb :rooms, parent %>

<% if collection.empty? %>
    <%= render 'components/empty_list', icon_name: "bath", type: Room, parent: parent %>
<% else %>
  <% if can_create(Room, current_user.permission_level) %>
    <div class="section-actions">
      <%= link_to [:new, parent, :room], class: "btn btn-primary" do %>
          <i class="fa fa-plus"></i>
          <span class="btn-label"><%= t(".add", parent_type: parent.model_name.human, parent_name: parent) %></span>
      <% end %>
    </div>
  <% end %>

  <table class="record-list rooms">
    <thead>
      <tr>
        <th><%= sortable(Room, :name) %></th>
        <th><%= sortable(Room, :updated_at) %></th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% collection.each do |room| %>
      <tr data-room="<%= room.id %>">
        <td><%= link_to room.name, [parent, room], title: room.name, class: "room-name" %></td>
        <td><%= l room.updated_at.to_date, format: :digits %></td>
        <td class="actions">
          <%= edit_btn url_for([:edit, parent, room]), element: room %>
          <%= delete_btn room, path: url_for([parent, room]), element: room %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="paging">
    <%= render 'components/page_size' %>
    <%= paginate collection %>
  </div>
<% end %>
