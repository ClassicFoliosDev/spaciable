<%= simple_form_for([choice_configuration, room_configuration]) do |f| %>
  <% if room_configuration.errors.any? %>
    <div class="submission-errors">
      <ul>
        <% room_configuration.errors.full_messages.each do |message| %>
          <li>
            <%= fa_icon "exclamation-circle" %>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div class="row">
    <div class="row-item third">
      <fieldset>
        <%= f.input :name %>
        <%= f.input :icon_name, label: t(".icon"), as: :select, collection: icon_names_collection, include_blank: true %>
      </fieldset>
    </div>
  </div>

  <div class="form-actions-footer-container">
    <div class="form-actions-footer">
      <%= link_to t(".back"), development_choice_configuration_path(development_id: choice_configuration.development_id, id: choice_configuration), class: "btn" %>
      <%= f.submit t(".submit"), class: "btn-form-submit btn-primary" %>
    </div>
  </div>
<% end %>
