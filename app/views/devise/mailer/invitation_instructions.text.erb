<%= t("devise.mailer.invitation_instructions.hello", name: @resource.to_s) %>

<%= t("devise.mailer.invitation_instructions.someone_invited_you_admin", someone: @resource.invited_by.to_s, development: @resource.permission_level) %>

<%= accept_invitation_url(@resource, :invitation_token => @token) %>

<% if @resource.invitation_due_at %>
  <%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %>
<% end %>
