<div class="admin-pass-reset">
  <h2>Reset your password.</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: false, required: true, autofocus: true, placeholder: "Password" %>
    <%= f.input :password_confirmation, label: false, required: true, placeholder: "Confirm password" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change My Password" %>
  </div>
  <% end %>

  <p class="login-small"><%= render "devise/shared/links" %></p>
</div>
