<div class="admin-login-panel">
  <div class="admin-login-form">
    <div class="admin-login-logo">
      <%= image_tag "Spaciable_full.svg" %>
    </div>

    <%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f| %>

      <h2><%= t(".header") %></h2>

      <div class="form-inputs">
        <%= f.hidden_field :invitation_token %>
        <%= f.input :password, label: false, placeholder: "Password" %>
        <%= f.input :password_confirmation, label: false, placeholder: "Confirm password" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t(".continue"), class: "btn-primary btn-admin-login btn-new-admin" %>
      </div>

      <div class="information">
        <p><%= t('.policy_instructions', :href1 => link_to(t(".terms"), ts_and_cs_admin_path, target: "_blank"), :href2 => link_to(t(".policy"), data_policy_path, target: "_blank")).html_safe %></p>
        <p><%= t(".copyright", year: Time.current.year).html_safe %></p>
      </div>
    <% end %>
  </div>
  <div class="preamble">
    <div class="content">
      <div class="login-icon">
        <div><%= image_tag "Spaciable_icon_white.svg" %></div>
      </div>
    </div>
  </div>
</div>
