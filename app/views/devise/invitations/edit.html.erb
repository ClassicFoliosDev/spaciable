<div class="admin-login-panel">
  <div class="admin-login-form">
    <%= image_tag "logo-with-strapline.png", class: "logo" %>
    <%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f| %>
      <h2><%= t(".header") %></h2>

      <%= f.hidden_field :invitation_token %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>

      <div class="information">
        <p><%= t('.policy_instructions', :href1 => link_to(t(".terms"), ts_and_cs2_path, target: "_blank"), :href2 => link_to(t(".policy"), data_policy_path), target: "_blank").html_safe %></p>

        <p><%= t(".copyright", year: Time.current.year).html_safe %></p>
      </div>

      <div class="confirm">
        <%= f.button :submit, t(".continue") %>
      </div>
    <% end %>
  </div>
</div>
