<%= t(".new_home", development_name: @resource.plot.development) %>

<%= t("devise.mailer.invitation_instructions.hello", name: @resource.to_s) %>

<%= t("devise.mailer.invitation_instructions.someone_invited_you", someone: @resource.invited_by.to_s, development: @resource.plot.development) %>

<%= resident_invitation_route(@resource, @token) %>

<% if @resource.invitation_due_at %>
  <%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %>
<% end %>

<%= strip_tags t("devise.mailer.invitation_instructions.ignore") %>
