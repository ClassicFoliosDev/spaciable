<% if collection.empty? %>
    <%= render 'components/empty_list', icon_name: "user", type: Resident, parent: parent %>
<% else %>
  <div class="section-actions">
    <% unless parent.expired? && !(current_user.cf_admin?) %>
      <%= link_to [:new, plot, :resident], class: "btn btn-primary", data: { action: "new" } do %>
        <i class="fa fa-plus"></i>
        <span class="btn-label"><%= t(".add") %></span>
      <% end %>
    <% end %>
  </div>

  <table class="record-list residents">
    <thead>
      <tr>
        <th colspan="2"><%= sortable(Resident, :last_name, t(".last_name")) %></th>
        <th colspan="2"><%= sortable(Resident, :email, t(".email")) %></th>
        <th colspan="2"><%= t(".role") %></th>
        <th colspan="2"><%= t(".invited_by") %></th>
        <th><%= sortable(Resident, :invitation_sent_at, t(".sent_at")) %></th>
        <th><%= sortable(Resident, :invitation_accepted_at, t(".accepted_at")) %></th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% collection.each do |resident| %>
        <tr data-plot-resident="<%= resident.id %>">
        <td colspan="2"><%= link_to resident, [plot, resident], title: resident %></td>
        <td colspan="2"><%= resident.email %></td>
        <td colspan="2"><%= resident.plot_residency_role_name(plot) %></td>
        <td colspan="2"><%= resident.plot_residency_invited_by(plot) %></td>
        <td><%= l resident.invitation_sent_at.to_date, format: :digits if resident.invitation_sent_at? %></td>
        <td><%= l resident.invitation_accepted_at.to_date, format: :digits if resident.invitation_accepted? %></td>
        <td class="actions">
          <% unless resident.invitation_accepted? %>
            <%= (reinvite_btn resident, "#{url_for([plot, resident])}/reinvite") %>
          <% end %>
          <%= (edit_btn [:edit, plot, resident], element: resident) unless parent.expired? && !(current_user.cf_admin?) %>
          <%= (delete_btn resident, path: url_for([plot, resident]), element: resident) %>
        </td>

      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="paging">
    <%= render 'components/page_size' %>
    <%= paginate collection %>
  </div>
<% end %>
