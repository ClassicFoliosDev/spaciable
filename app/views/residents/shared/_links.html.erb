<%- if controller_name != 'sessions' %>
  <%= link_to t("devise.login"), new_resident_session_path %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("devise.register"), new_resident_registration_path %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("devise.forgot_password"), new_resident_password_path %><br />
<% end -%>

