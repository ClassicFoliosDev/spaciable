<%= simple_form_for([plot, resident]) do |f| %>
    <% if resident.errors.any? %>
        <div class="row">
          <div class="row-item">
            <div class="submission-errors">
              <ul>
                <% resident.errors.full_messages.each do |message| %>
                    <li>
                      <%= fa_icon "exclamation-circle" %>
                      <%= message %>
                    </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
    <% end %>

    <div class="row">
      <div class="row-item third">
        <fieldset>
          <div class="ui-front select-container">
            <%= f.input :title,
                as: :select,
                collection: Resident.titles,
                label_method: ->((key, _)) { t_enum(Resident, :title, key) },
                value_method: ->((key, _)) { key },
                include_blank: false %>
          </div>

          <%= f.input :first_name, required: true %>
          <%= f.input :last_name, required: true %>
        </fieldset>
      </div>

      <div class="row-item third">
        <fieldset>
          <div class="ui-front select-container">
            <%= f.input :role,
            as: :select,
            collection: roles_collection,
            include_blank: false,
            selected: locals[:role] %>
          </div>

          <%= f.input :email, required: true %>
          <%= f.input :phone_number, required: true %>
          <span class="info-span"><%= t(".international") %></span>
        </fieldset>
      </div>
    </div>

    <div class="form-actions-footer-container">
      <div class="form-actions-footer">
        <%= link_to t(".back"), [plot, active_tab: :residents], class: "btn" %>
        <%= f.submit t(".submit"), class: "btn-form-submit btn-primary" %>
      </div>
    </div>
<% end %>
