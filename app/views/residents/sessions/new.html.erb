<div class="login branded-content">
  <div class="sign-in">
    <div class="login-logo">
      <%= image_tag brand_or_white_logo(@brand) %>
    </div>
    <%= render "components/flashes" %>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="branded-primary-text">
        <div class="branded-input">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.label :remember_me, class: "login-checkbox" do %>
            <%= f.check_box :remember_me, class: "branded-input remember-checkbox", checked: false %>
            <i class="fa fa-check"></i> <span><%= t(".remember_me") %></span>
          <% end %>
        </div>

        <div class="branded-primary-btn">
          <%= f.submit t(".login_cta"), class: "btn" %>
        </div>

        <div class="information">
          <p><%= render "residents/shared/links" %></p>
          <p><%= t(".copyright", year: Time.current.year).html_safe %></p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="preamble">
    <div class="content">
      <div class="titles branded-titles">
        <h2><%= t '.welcome_1' %></h2>
        <h2><%= t '.welcome_2' %></h2>
      </div>

      <div class="intro branded-text">
        <p><%= t(".intro_para_1") %></p>
        <p><%= t(".intro_para_2") %></p>
      </div>
    </div>
  </div>
</div>
