<%= simple_form_for([parent, development]) do |f| %>
  <% if development.errors.any? %>
    <div class="submission-errors">
      <ul>
        <% development.errors.full_messages.each do |message| %>
          <li>
            <%= fa_icon "exclamation-circle" %>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="row-item third">
      <fieldset>
        <%= f.input :name %>
        <%= f.input :business, as: :select, collection: development_businesses_collection, include_blank: false %>
      </fieldset>
    </div>
    <div class="row-item third">
      <fieldset>
        <%= f.simple_fields_for :address do |fields| %>
          <label class="string optional"><%= t(".address") %></label>
          <%= render "address/fields", fields: fields %>
        <% end %>
      </fieldset>
    </div>
    <div class="row-item third">
      <fieldset>
        <%= f.input :email %>
        <%= f.input :contact_number %>
        <%= f.input :maintenance_link, placeholder: t(".maintenance_placeholder") %>
        <p><%= t(".maintenance_tip")%></p>
      </fieldset>
    </div>
  </div>

  <div class="form-actions-footer-container">
    <div class="form-actions-footer">
      <%= link_to t(".back"), [parent, development], class: "btn" %>
      <%= f.submit t(".submit"), class: "btn-form-submit btn-primary" %>
    </div>
  </div>
<% end %>
