<div class="section-header">
  <div class="section-title">
    <% if developer.expired? && !(current_user.cf_admin?) %>
      <div class="expired"><span class="expired-text"><%= t(".expiry") %></span></div>
    <% end %>
    <div><%= developer.company_name %></div>
    <span class="about">
      <%= simple_format developer.about %>
      <br/>
      <strong><%= t(".house_search") %></strong><%= developer.house_search? ? t(".enabled") : t(".disabled") %><br/>
      <strong><%= t(".messages") %></strong><%= developer.enable_development_messages? ? t(".enabled") : t(".disabled") %><br/>
      <strong><%= t(".faq_scope") %></strong><%= developer.development_faqs? ? t(".development") : t(".developer") %><br/>
      <strong><%= t(".list_id") %></strong><%= developer.list_id || 0 %><br/>
      <strong><%= t(".referrals") %></strong><%= developer.enable_referrals? ? t(".enabled") : t(".disabled") %><br/>
      <strong><%= t(".roomsketcher") %></strong><%= developer.enable_roomsketcher? ? t(".enabled") : t(".disabled") %><br/>
      <strong><%= t(".services") %></strong><%= developer.enable_services? ? t(".enabled") : t(".disabled") %><br/>
    </span>
  </div>

  <div class="section-data">

    <%= render 'address/address', address: developer.address %><br/>
    <%= render 'components/contacts', contact: developer %><br/>
    <%= edit_btn [:edit, developer], element: developer %>
  </div>
</div>
