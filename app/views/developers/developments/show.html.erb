<% breadcrumb :development, @development %>

<div class="section-header">
  <h3 class="section-title">
    <i class="fa fa-building"></i>
    <%= @development.name %><br>
  </h3>

  <div class="section-data">
    <%= render 'address/address', address: @development.address %>
    <%= render 'components/contacts', contact: @development %>
    <%= edit_btn [:edit, @developer, @development] %>
  </div>
</div>

<%= render 'components/tabs', tabs: developer_development_tabs(@developer, @active_tab), parent: @developer %>

<%= render_collection @collection, parent: @development %>

<%= link_to t(".back"), developer_developments_path, class: "btn" %>
