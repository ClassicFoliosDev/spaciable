<% breadcrumb :developers %>

<div class="section-header">
  <h3 class="section-title">
    <i class="fa fa-building"></i>
    <%= t(".title") %>
  </h3>
</div>

<div class="section-actions">
  <%= link_to new_developer_path, class: "btn btn-primary" do %>
    <i class="fa fa-plus"></i>
    <span class="btn-label"><%= t(".add") %></span>
  <% end %>
</div>

<div class="record-list">
  <dl class="developers">
    <dt class="record-list-item record-header">
      <div class="record-list-header-content">
        <span><%= sortable(Developer, :company_name) %></span>
        <span><%= sortable(Developer, :updated_at) %></span>
      </div>
    </dt>
    <% @developers.each do |developer| %>
      <dd class="record-list-item" data-developer="<%= developer.id %>">
        <div class="record-list-item-actions">
          <%= link_to t(".divisions"), developer_divisions_path(developer), class: "btn" %>
          <%= link_to t(".developments"), developer_developments_path(developer), class: "btn" %>
          <%= edit_btn edit_developer_path(developer) %>
          <%= delete_btn developer %>
        </div>
        <div class="record-list-item-content">
           <%= link_to developer.company_name, developer_path(developer), active_tab: :divisions %>
           <span>
             <%= l developer.updated_at.to_date, format: :digits %>
           </span>
        </div>
      </dd>
    <% end %>
  </dl>
</div>

<div class="paging">
  <%= render 'components/page_size' %>
  <%= paginate @developers %>
</div>

