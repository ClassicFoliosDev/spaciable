<%= simple_form_for finish_type do |f| %>
  <% if finish_type.errors.any? %>
    <div class="submission-errors">
      <ul>
        <% finish_type.errors.full_messages.each do |message| %>
          <li>
            <%= fa_icon "exclamation-circle" %>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row finish_type">
    <div class="row-item half">
      <fieldset>
        <%= f.input :name %>
      </fieldset>
    </div>

    <div class="row-item half">
      <fieldset>
        <div class="finish-type-finish-category ui-front select-container">
          <label><%= t(".finish_category") %></label>
          <%= f.select :finish_category_id,
                       options_from_collection_for_select(finish_categories,
                                                          "id",
                                                          "name",
                                                          finish_type&.finish_categories&.first&.id),
                       include_blank: true %>
        </div>
      </fieldset>
    </div>
  </div>

  <div class="form-actions-footer-container">
    <div class="form-actions-footer">
      <%= link_to t(".back"), finish_types_path, class: "btn" %>
      <%= f.submit t(".submit"), class: "btn-form-submit btn-primary" %>
    </div>
  </div>
<% end %>
