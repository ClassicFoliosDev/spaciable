<% breadcrumb :appliances %>

<%= render "components/admin/stuck_with_specs", cas: Developer.find_by(id: current_user&.developer)&.cas %>

<% unless current_user.cf_admin? %>
  <%= render "components/admin/popup", title: t(".info.title"), preference: :show_appliances_info_dialog, help: [t(".info.desc")], all_users: false, popup_on_load: true, width: 500, selector: ".section-title #trigger" %>
<% end %>

<div class="section-header">
  <div class="section-title">
    <% unless current_user.cf_admin? %>
      <i id="trigger" class="fa fa-question-circle"></i>
    <% end %>
    <%= t(".title") %>
  </div>
</div>

<%= render 'components/admin/appliance_search', ufilter: @afilter, path: appliances_path, appliance_search_path: admin_appliance_search_path, search: t(".search")%>

<%= render 'components/tabs', tabs: appliance_tabs(nil, @active_tab, current_user.developer) %>
<%= render_collection @appliances, room: nil, filter: @filter %>
