<% breadcrumb :appliances %>

<%= render "components/admin/popup", title: t("stuck_with_specs.title"), help: [t("stuck_with_specs.help")], type: :tip, all_users: true, popup_on_load: false, width: 500 %>

<% unless current_user.cf_admin? %>
  <%= render "components/admin/popup", title: t(".info.title"), preference: :show_appliances_info_dialog, help: [t(".info.desc")], all_users: false, popup_on_load: true, width: 500, selector: ".section-title #trigger" %>
<% end %>

<div class="section-header">
  <div class="section-title">
    <% unless current_user.cf_admin? %>
      <i id="trigger" class="fa fa-question-circle"></i>
    <% end %>
    <%= t(".title") %>
  </div>
</div>

<%= render 'components/tabs', tabs: appliance_tabs(nil, @active_tab, current_user.developer) %>
<%= render_collection @appliances, room: nil %>
