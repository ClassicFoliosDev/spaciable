<%= render "components/admin/popup", title: t(".info.title"), preference: :show_appliances_info_dialog, help: [t(".info.desc", developer: Developer.find(current_user.developer).identity)], all_users: false, popup_on_load: true, width: 500, selector: ".section-title #trigger" %>

<div class="section-header">
  <div class="section-title">
    <i id="trigger" class="fa fa-question-circle"></i><%= t(".title") %>
  </div>
</div>

<%= render 'components/tabs', tabs: appliance_tabs(nil, @active_tab, current_user.developer) %>
