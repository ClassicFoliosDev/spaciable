<div class="section-actions">
  <% if !parent.brand.present? %>
    <%= link_to [:new, parent, :brand], class: "btn btn-primary" do %>
      <i class="fa fa-plus"></i>
      <span class="btn-label"><%= t(".create") %></span>
    <% end %>
  <% end %>
</div>

<div class="record-list">
  <dl class="brands">
    <dt class="record-list-item record-header">
      <div class="record-list-header-content">
        <span class="icon">&nbsp;</span>
        <span><%= sortable(Brand, :brandable, t(".name")) %></span>
        <span><%= sortable(Brand, :updated_at) %></span>
      </div>
    </dt>
    <% if brand.id? %>
      <dd class="record-list-item" data-brands="<%= brand.id %>">
        <div class="record-list-item-actions">
          <%= edit_btn [:edit, brand.brandable, :brand] %>
          <%= delete_btn brand, path: url_for([brand.brandable, :brand])%>
        </div>
        <div class="record-list-item-content">
          <span class="icon">
            <%= image_tag brand.logo, class: "circle" if brand.logo? %>
          </span>
          <span>
            <%= link_to brand, [brand.brandable, :brand] %>
          </span>
          <span>
            <%= l brand.updated_at.to_date, format: :digits %>
          </span>
        </div>
      </dd>
    </dl>
  <% end %>
</div>

<div class="paging">
  <%= render 'components/page_size' %>
  <!-- paginate collection -->
</div>
