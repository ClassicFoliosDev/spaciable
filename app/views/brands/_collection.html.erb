<% if brand.id.nil? %>
  <%= render 'components/empty_list', icon_name: "css3", type: Brand, parent: parent %>
<% else %>
  <table class="record-list">
    <thead>
      <tr>
        <th class="icon">&nbsp;</th>
        <th colspan="3"><%= sortable(Brand, :brandable, t(".name")) %></th>
        <th colspan="2"><%= sortable(Brand, :updated_at) %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag brand.logo, class: "circle" if brand.logo? %></td>
        <td colspan="3"><%= link_to brand, [brand.brandable, :brand] %></td>
        <td colspan="2"><%= l brand.updated_at.to_date, format: :digits %></td>
        <td class="actions">
          <%= edit_btn [:edit, brand.brandable, :brand], element: brand %>
          <%= delete_btn brand, path: url_for([brand.brandable, :brand]), element: brand %>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="paging">
    <%= render 'components/page_size' %>
  </div>
<% end %>
