<% else %>
  <p><%= t(".status_details", tool_name: @tool_name) %><%= link_to t("snag_mailer.link_to_snag"), snag_url(@snag.id) %>.</p>
<% end %>

<p>
  <%= link_to t("resident_snag_mailer.login"), root_url %>
</p>

